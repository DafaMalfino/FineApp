<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical">


    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:padding="20dp"
            android:id="@+id/rs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/hospital"
            android:onClick="clickRS"/>

        <ImageView
            android:padding="20dp"
            android:id="@+id/polis"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/police"
            android:onClick="clickPolis"/>
    </TableRow>

    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:padding="20dp"
            android:id="@+id/konbini"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/supermarket"
            android:onClick="clickKonbini"/>

        <ImageView
            android:padding="20dp"
            android:id="@+id/sukuru"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/school"
            android:onClick="clickSchool"/>
    </TableRow>
</LinearLayout>